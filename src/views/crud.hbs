<div class="container">
    <img src="image/fondo.jpeg" alt="" class="fondo">
    <br>

    <form action="/buscarReservitas" method="post">
        <div class="mb-3">
            <label for="txtBuscar" class="form-label">Buscar</label>
            <input type="text" class="form-control" id="txtBuscar" name="txtBuscar" placeholder="Consulta">
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-primary form-control registro" value="Consultar">
        </div>
    </form>
    <form action="/crud" method="get">
        <div class="mb-3">
            <input type="submit" class="btn btn-primary form-control registro" value="Cancelar">
        </div>
    </form>


    <h1>Reservas</h1>
    <table class="table table-striped">
        <tr>
            <th>Cédula</th>
            <th>Número de Invitados</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Motivo</th>
            <th>Acciones</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{cedula}}</td>
            <td>{{numInvitados}}</td>
            <td>{{fecha}}</td>
            <td>{{hora}}</td>
            <td>{{motivo}}</td>
            <td>
                <a href="editar/{{cedula}}" class="btn btn-primary">Editar</a>
                <a href="eliminar/{{cedula}}" class="btn btn-primary">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>